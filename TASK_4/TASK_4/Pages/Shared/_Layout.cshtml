<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TASK_4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/img-bg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TASK_4.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted half">
        <div class="container ">
            <div class=" half d-flex justify-content-around">
                <div >
                <span class="fw-light">Don't have any account?</span>
                <a asp-area="" asp-page="/Home/SignUp">Sign Up</a>
                </div>
                <div >
                <a asp-area="" asp-page="/Home/ForgotPassword">Forgot Password</a>
                </div>
            
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>